{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "TrendXL-Fullstack",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "${{RAILWAY_PORT}}",
        "NODE_ENV": "production",
        "PYTHONPATH": "/app/backend",
        "PYTHONUNBUFFERED": "1",
        "HOST": "0.0.0.0",
        "DEBUG": "false"
      }
    }
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 60,
    "interval": 60
  }
}