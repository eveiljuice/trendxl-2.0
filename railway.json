{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "TrendXL-Frontend",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "${{RAILWAY_PORT}}",
        "NODE_ENV": "production"
      }
    }
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 30,
    "interval": 60
  }
}