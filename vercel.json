{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/health",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "env": {
    "ENSEMBLE_API_TOKEN": "@ensemble_api_token",
    "OPENAI_API_KEY": "@openai_api_key",
    "PERPLEXITY_API_KEY": "@perplexity_api_key",
    "JWT_SECRET_KEY": "@jwt_secret_key",
    "REDIS_URL": "@redis_url"
  },
  "build": {
    "env": {
      "VITE_BACKEND_API_URL": ""
    }
  }
}

